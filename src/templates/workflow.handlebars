
cd "{{{directory}}}"

{{#each added_links}}
commitments share '{{{../file_name}}}' with '{{{this}}}'
{{/each}}
{{#each removed_links}}
commitments unshare '{{{../file_name}}}' with '{{{this}}}'
{{/each}}

{{#task_done}}
commitments task done '{{{../file_name}}}'
{{/task_done}}
{{#task_undone}}
commitments task undone '{{{../file_name}}}'
{{/task_undone}}

{{#updated_comments}}
{{#eachProperty ../current_version.links}}
notify send --to '{{{key}}}' --tags "comment" --link "{{{../../current_version.id}}}/{{{../hash}}}" --context '{{{../../file_name}}}'
{{/eachProperty}}
{{/updated_comments}}
